<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="TS 1 - Registration Control" parallel="methods" thread-count="1" verbose="3">
  <test name="TC_1 - logInRandomEmail" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.AdPanel">
        <methods>
          <include name="logInRandomEmail"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC_2 - Registration_Error" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.AdPanel">
        <methods>
          <include name="Registration_Error"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC_3 - registerForgotPassword" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.AdPanel">
        <methods>
          <include name="logInRandomEmail"/>
          <include name="logInPopUpFirstPublisher"/>
          <include name="logOutTest"/>
        </methods>
      </class>
      <class name="pl.adshares.adpanel.RegisterTestCase">
        <methods>
          <include name="registerForgotPassword"/>
        </methods>
      </class>
    </classes>
  </test>
</suite>

