<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="TS 3 - Advertiser" parallel="methods" thread-count="1" verbose="3">
  <test name="TC 1 - Logowanie z nieprawidłowymi danymi" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.AdPanel">
        <methods>
          <include name="loginAsdf"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 2 - Logowanie użytkownika" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.AdPanel">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstAdvertiser"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 3 - Wylogowanie" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.AdPanel">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstAdvertiser"/>
          <include name="logOutTest"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 4 - Weryfikacja zawartości głównej strony ogłoszeniodawcy" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.AdPanel">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstAdvertiser"/>
        </methods>
      </class>
      <class name="pl.adshares.adpanel.AdvertiserTestCase">
        <methods>
          <include name="advertiserCampaign"/>
        </methods>
      </class>
    </classes>
  </test>



  <test name="TC 7 - Tworzenie kampanii - anulowanie" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.AdPanel">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstAdvertiser"/>
        </methods>
      </class>
      <class name="pl.adshares.adpanel.AdvertiserTestCase">
        <methods>
          <include name="backBasicInformationAdvertiserCampaign"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 8 - Tworzenie kampanii - podstawowe parametry" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.AdPanel">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstAdvertiser"/>
        </methods>
      </class>
      <class name="pl.adshares.adpanel.AdvertiserTestCase">
        <methods>
          <include name="saveBasicInformationAdvertiserCampaign"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 9 - Tworzenie kampanii - targetowanie" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.AdPanel">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstAdvertiser"/>
        </methods>
      </class>
      <class name="pl.adshares.adpanel.AdvertiserTestCase">
        <methods>
          <include name="saveAdditionalTargetingCampaign"/>
        </methods>
      </class>
    </classes>
  </test>



  <test name="TC 13 - Weryfikacja - Save as Draft" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.AdPanel">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstAdvertiser"/>
        </methods>
      </class>
      <class name="pl.adshares.adpanel.AdvertiserTestCase">
        <methods>
          <include name="saveAsDraftAdvertiserCampaign"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 14 - Weryfikacja - Back" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.AdPanel">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstAdvertiser"/>
        </methods>
      </class>
      <class name="pl.adshares.adpanel.AdvertiserTestCase">
        <methods>
          <include name="backAdvertiserCampaign"/>
        </methods>
      </class>
    </classes>
  </test>



  <test name="TC 2 - Create Campaign">
    <classes>
      <class name="pl.adshares.adpanel.AdPanel">
       <methods>
         <include name="loginRegisterRandom"/>
         <include name="loginPopUpFirstAdvertiser"/>
       </methods>
      </class>
      <class name="pl.adshares.adpanel.AdvertiserTestCase">
       <methods>
         <include name="createAdvertiserCampaign"/>
       </methods>
      </class>
    </classes>
  </test>
</suite>
