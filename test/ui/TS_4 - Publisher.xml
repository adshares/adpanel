    </classes>
  </test>
  <test name="TC 4 - Edit Site" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginTest"/>
          <include name="loginPopUpPublisher"/>
        </methods>
      </class>
      <class name="pl.adshares.adpanel.PublisherTestCase">
        <methods>
          <include name="publiserEditSiteEdit"/>
        </methods>
      </class>
    </classes>
