<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="TS_2 - Login Control" parallel="methods" thread-count="1" verbose="3">
  <test name="TC 1 - WebElements validation" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginPageObjectValidation"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 2 - Cross validation" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginPageCrossAccessValidation"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 3 - Logowanie z rolą Publisher" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstPublisher"/>
          <include name="logOutTest"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 4 - Logowanie z rolą Advertiser" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstAdvertiser"/>
          <include name="logOutTest"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 5 - Logowanie z podwójną rolą" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstPublisher"/>
          <include name="loginChangingTheDashboardBack"/>
        </methods>
      </class>
    </classes>
  </test>

  <test name="TC 6 - Zmiana maila" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstPublisher"/>
          <include name="loginChangeEmail"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 7 - Zmiana hasła" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstPublisher"/>
          <include name="loginChangePassword"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 8 - Wylogowanie" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstPublisher"/>
          <include name="logOut"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 9 - Zamknięcie karty przeglądarki - RemeberMe On" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginRegisterRememberMe"/>
          <include name="loginPopUpFirstPublisher"/>
          <include name="loginSecondTab"/>
          <include name="logOut"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 10 - Zamknięcie karty przeglądarki - RemeberMe Off" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstPublisher"/>
          <include name="loginSecondTab2"/>

        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 11 - Otwarcie sesji równolegle w nowej karcie" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstPublisher"/>
          <include name="loginSecondTab3"/>

        </methods>
      </class>
    </classes>
  </test>
  <test name="TC 12 - Otwarcie sesji równolegle w innej przeglądarce" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginRegisterRandom"/>
          <include name="loginPopUpFirstPublisher"/>
          <include name="loginSecondTab4"/>
        </methods>
      </class>
    </classes>
  </test>

</suite>

