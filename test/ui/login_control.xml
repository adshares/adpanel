<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Login Control Test Suite" parallel="methods" thread-count="20" verbose="3">
  <test name="Login - WebElements validation" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginPageObjectValidation"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="Login - Cross validation" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginPageCrossAccessValidation"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="Login - Correct Access" group-by-instances="true">
    <classes>
      <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="loginTest"/>
          <include name="popUpPublisher"/>
        </methods>
      </class>
    <class name="pl.adshares.adpanel.LoginTestCase">
        <methods>
          <include name="logOutTest"/>
        </methods>
      </class>
    </classes>
  </test>
</suite>

